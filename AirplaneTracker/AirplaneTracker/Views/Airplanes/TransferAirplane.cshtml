@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div id="div1" class="form-horizontal">
        <h4>Airplanes</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

         <div id="div2 " class="form-group">
            @Html.HiddenFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>
        <h2>Transfer Airplane @Model.name to the following airport</h2>
        


        <div class="form-group">
            @Html.HiddenFor(model => model.AirplaneType, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.maxpass, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.size, htmlAttributes: new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.currentAirport, "Transfer to :", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("currentAirport", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.currentAirport, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.currentpilot, new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            @Html.HiddenFor(model => model.currentcopilot, new { @class = "control-label col-md-2" })

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Transfer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
